# Copy to .env.backup in your hosting app root and set real values.
# chmod 600 .env.backup

# Native mode is Cloudways-friendly and does not require restic.
BACKUP_DRIVER="native"

# Backblaze destination in bucket/prefix form.
# Example: ay-website-backups/projectname
BACKUP_PATH="your-bucket/your-prefix"

# Backblaze B2 keys
AWS_ACCESS_KEY_ID="replace-with-b2-key-id"
AWS_SECRET_ACCESS_KEY="replace-with-b2-application-key"

# Database credentials for mysqldump/mysql restore
DB_HOST="127.0.0.1"
DB_PORT="3306"
DB_NAME="your_database"
DB_USER="your_db_user"
DB_PASSWORD="your_db_password"

# Optional CSV fallbacks if credentials differ across environments.
# DB_HOST_FALLBACKS="db,127.0.0.1,localhost"
# DB_PORT_FALLBACKS="3306"
# DB_NAME_FALLBACKS="db"
# DB_USER_FALLBACKS="db,root"
# DB_PASSWORD_FALLBACKS="db,root"

# Optional mysqldump flags
# DB_EXTRA_OPTS="--default-character-set=utf8mb4"

# Backup behavior
BACKUP_PROJECT_TAG="cake-backup-pro"
BACKUP_RETENTION_DAYS="45"
BACKUP_FILENAME_DATE_FORMAT="%Y%m%d-%H%M%S"

# Updraft-style component selection for files/full backups.
# Available: config,src,templates,webroot,resources,plugins,uploads,www,db_files,root_files,env_files
BACKUP_FILE_COMPONENTS="config,src,templates,webroot,resources,plugins,uploads,www,db_files,root_files,env_files"

# Optional URL metadata + rewrite behavior for cross-environment restore.
# BACKUP_SITE_URL="https://website.com"
# RESTORE_TARGET_URL="https://website.local"
# RESTORE_SOURCE_URL="https://website.com"   # override source if metadata unavailable
# RESTORE_REWRITE_URLS="1"

# Optional post-restore helpers.
# RESTORE_CLEAR_CACHE="1"
# RESTORE_RUN_COMPOSER="0"
# RESTORE_RUN_MIGRATIONS="0"

# Optional extra relative paths to include in file/full backups, space-separated.
# BACKUP_EXTRA_PATHS="bin db phinx.php"

# Optional restic mode settings (only if BACKUP_DRIVER=restic)
# RESTIC_REPOSITORY="s3:https://s3.us-west-004.backblazeb2.com/your-bucket/cake-backup-pro"
# RESTIC_PASSWORD="replace-with-strong-random-password"
# RESTIC_S3_ENDPOINT="s3.us-west-004.backblazeb2.com"
