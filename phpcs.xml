<?xml version="1.0"?>
<ruleset name="Warranty">
    <description>CodeSniffer configuration for the Warranty app and CakeBackupPro plugin.</description>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg value="sp"/>
    <arg name="parallel" value="8"/>

    <file>src</file>
    <file>config</file>
    <file>tests</file>
    <file>plugins/CakeBackupPro/src</file>
    <file>plugins/CakeBackupPro/config</file>
    <file>plugins/CakeBackupPro/tests</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>tmp/*</exclude-pattern>
    <exclude-pattern>logs/*</exclude-pattern>
    <exclude-pattern>webroot/*</exclude-pattern>
    <exclude-pattern>plugins/CakeBackupPro/docs/*</exclude-pattern>
    <exclude-pattern>plugins/CakeBackupPro/scripts/*</exclude-pattern>

    <rule ref="CakePHP"/>
    <rule ref="PHPCollective"/>
    <rule ref="PHPCompatibility"/>
    <config name="testVersion" value="8.1-"/>
</ruleset>
